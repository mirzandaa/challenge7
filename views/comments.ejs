<link rel="stylesheet" href="stylesheets/commentList.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


<div class="back">
    <a href="/welcome_player">
        <i class="fas fa-chevron-left fa-lg">
        </i>

    </a>
    <p>
        BACK
    </p>
</div>

<div class="container-comments">
    <div class="sign-in-card">
        <div class="title">
            <h1>PLAYER COMMENTS</h1>
            <h3>Welcome to Traditional Game</h3>
        </div>

        <form action="/comments" method="get">
            <% comments.forEach( comment=> { %>
                <div class="container">
                    <h4>
                        <%= comment.User.user_name%>
                    </h4>
                    <p>
                        <%= comment.User.email%>
                    </p>
                    <p>
                        "<%= comment.comment%>"
                    </p>
                    <p class="date">
                        <%= comment.login_date%>
                    </p>
                </div>
                <% }) %>
        </form>
    </div>
</div>