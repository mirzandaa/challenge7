<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
    integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

<div class="bg-dark bg-gradient bg w-100 h-100 d-flex flex-column ">
    <div class="ms-4 mt-3 d-flex">
        <a href="/welcome_player" class="mt-1">
            <i class="fas fa-chevron-left fa-lg text-white-50">
            </i>

        </a>
        <p class="ms-2 text-white-50">
            BACK
        </p>
    </div>
    <div class="mx-auto mt-2 p-2 mb-2">
        <h1 class="text-white-50 fw-bold fs-1 mb-5">TOP 5 SCORES</h1>
    </div>
    <div class="mx-auto">
        <form action="/topScores" method="get">
            <div class="d-flex flex-column ">
                <table class="text-center">
                    <thead>
                        <tr>
                            <th class="p-3 m-5 fs-3">
                                Rank
                            </th>
                            <th class="p-3 m-5 fs-3">
                                Username
                            </th>
                            <th class="p-3 m-5 fs-3">
                                Score
                            </th>
                        </tr>

                    </thead>
                    <tbody>
                        <% for(let i=0; i< data.length; i++) { %>
                            <tr class="text-white">
                                <td class="p-3 m-5 fs-3">
                                    <%= i+1 %>
                                </td>
                                <td class="p-3 m-5 fs-3">
                                    <%= data[i].User.user_name %>
                                </td>
                                <td class="p-3 m-5 fs-3">
                                    <%= data[i].score %>
                                </td>
                            </tr>


                            <% } %>
                    </tbody>
                </table>

            </div>


        </form>

    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>