<link rel="stylesheet" href="stylesheets/signIn.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">



<div class="back">
    <a href="/signUp">
        <i class="fas fa-chevron-left fa-lg">
        </i>

    </a>
    <p>
        BACK
    </p>
</div>

<div class="sign-in-card">
    <div class="title">
        <h1>SIGN IN</h1>
        <h3>Welcome to Traditional Game</h3>
    </div>


    <% if (alert) { %>
        <h5 class="alert">
            <%= alert %>
        </h5>
        <% } %>



            <form action="/signIn" method="post">
                <div class="container">
                    <div class="user">
                        <i class="fa-solid fa-user user"></i>
                        <input type="text" placeholder="Enter Username" name="user_name">
                    </div>
                    <div class="email">
                        <i class="fa-solid fa-envelope"></i>
                        <input type="email" placeholder="Enter Email Address" name="email">
                    </div>
                    <div class="password">
                        <i class="fa-solid fa-lock lock"></i>
                        <input type="password" placeholder="Enter Password" name="password" id="pass">
                    </div>

                    <button type="submit">SIGN IN</button>
                </div>

                <div class="change-pass">
                    <h4>Forgot Password ?</h4>
                    <a href="/changePassword">
                        <h4>CHANGE PASSWORD</h4>
                    </a>
                </div>

            </form>

</div>